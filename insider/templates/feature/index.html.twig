{% extends 'base.html.twig' %}

{% block title %}Feature index{% endblock %}

{% block body %}
    <h1>Feature index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FeatureName</th>
                <th>FeatureDescription</th>
                <th>FeatureNotationPos</th>
                <th>FeatureNotationNeg</th>
                <th>FeatureType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feature in features %}
            <tr>
                <td>{{ feature.id }}</td>
                <td>{{ feature.FeatureName }}</td>
                <td>{{ feature.FeatureDescription }}</td>
                <td>{{ feature.FeatureNotationPos }}</td>
                <td>{{ feature.FeatureNotationNeg }}</td>
                <td>{{ feature.FeatureType }}</td>
                <td>
                    <a href="{{ path('feature_show', {'id': feature.id}) }}">show</a>
                    <a href="{{ path('feature_edit', {'id': feature.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('feature_new') }}">Create new</a>
{% endblock %}
